<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN" 
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
	<class name="com.wondertek.meeting.model.custom.PageTheme" table="page_theme">
		<id name="id" type="java.lang.Long">
			<generator class="identity"></generator>
		</id>
		<property name="name" column="name" type="java.lang.String" length="20" />
		<property name="title" column="title" type="java.lang.String" length="50" />
		<property name="description" column="description" type="java.lang.String" length="200" />
		<property name="thumbnailName" column="thumbnail_name" type="java.lang.String" length="20" />
		<property name="state" column="state" type="java.lang.Integer" />
	</class>
</hibernate-mapping>